{
    "swagger": "2.0",
    "info": {
        "title": "助手破冰API文档",
        "contact": {
            "name": "iyear",
            "url": "https://github.com/iyear",
            "email": "ljyngup@gmail.com"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/depart/getAll": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "depart"
                ],
                "summary": "获取所有部门信息",
                "parameters": [
                    {
                        "type": "string",
                        "description": "token \u003cAccessToken\u003e",
                        "name": "authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/api.Resp"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/model.GetAllDepartsResp"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "/me/info": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "me"
                ],
                "summary": "获取个人信息",
                "parameters": [
                    {
                        "type": "string",
                        "description": "token \u003cAccessToken\u003e",
                        "name": "authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/api.Resp"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/model.GetMeResp"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "/me/update": {
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "me"
                ],
                "summary": "更新个人信息",
                "parameters": [
                    {
                        "type": "string",
                        "description": "token \u003cAccessToken\u003e",
                        "name": "authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "description": "更改后的信息",
                        "name": "object",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/model.UpdateMeReq"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/api.Resp"
                        }
                    }
                }
            }
        },
        "/option/get": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "option"
                ],
                "summary": "获取选项",
                "parameters": [
                    {
                        "type": "string",
                        "description": "token \u003cAccessToken\u003e",
                        "name": "authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "数量，大于总数或显示照片人数将返回错误",
                        "name": "num",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "筛选的部门,-2为不限",
                        "name": "depart",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/api.Resp"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/model.GetOptionsResp"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "/option/judge": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "option"
                ],
                "summary": "判断选项",
                "parameters": [
                    {
                        "type": "string",
                        "description": "token \u003cAccessToken\u003e",
                        "name": "authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "照片file",
                        "name": "photo",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "学生id",
                        "name": "id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/api.Resp"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/model.JudgeOptionResp"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "/photo/me": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "photo"
                ],
                "summary": "获取当前照片",
                "parameters": [
                    {
                        "type": "string",
                        "description": "token \u003cAccessToken\u003e",
                        "name": "authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/api.Resp"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/model.Photo"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "/photo/upload": {
            "post": {
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "photo"
                ],
                "summary": "上传照片",
                "parameters": [
                    {
                        "type": "string",
                        "description": "token \u003cAccessToken\u003e",
                        "name": "authorization",
                        "in": "header",
                        "required": true
                    },
                    {
                        "type": "file",
                        "description": "照片文件",
                        "name": "photo",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/api.Resp"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/definitions/model.Photo"
                                        }
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "api.Resp": {
            "type": "object",
            "properties": {
                "data": {},
                "error": {
                    "type": "integer",
                    "example": 0
                },
                "msg": {
                    "type": "string",
                    "example": "ok"
                },
                "redirect": {
                    "type": "string",
                    "example": " "
                }
            }
        },
        "model.Depart": {
            "type": "object",
            "properties": {
                "desc": {
                    "description": "部门描述",
                    "type": "string"
                },
                "id": {
                    "description": "部门id",
                    "type": "integer"
                },
                "name": {
                    "description": "部门名字",
                    "type": "string"
                }
            }
        },
        "model.GetAllDepartsResp": {
            "type": "object",
            "properties": {
                "count": {
                    "description": "部门个数",
                    "type": "integer",
                    "example": 4
                },
                "departs": {
                    "description": "详细部门数组",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.Depart"
                    }
                }
            }
        },
        "model.GetMeResp": {
            "type": "object",
            "properties": {
                "depart": {
                    "description": "部门名称",
                    "type": "string",
                    "example": "未选择"
                },
                "photo": {
                    "description": "照片文件名",
                    "type": "string",
                    "example": "df93c5bb-b957-4e24-afa1-9cr2372ef8fe.jpg"
                },
                "show": {
                    "description": "是否显示照片，1为显示，2为不显示",
                    "type": "integer",
                    "example": 1
                },
                "staff_id": {
                    "description": "学号",
                    "type": "integer",
                    "example": 21051101
                },
                "staff_name": {
                    "description": "姓名",
                    "type": "string",
                    "example": "小明"
                }
            }
        },
        "model.GetOptionsResp": {
            "type": "object",
            "properties": {
                "options": {
                    "description": "选项数组",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/model.Option"
                    }
                },
                "photo": {
                    "description": "照片",
                    "type": "string",
                    "example": "be4aed10-aaf4-453a-8d4e-e0ace7bc56ea.jpeg"
                }
            }
        },
        "model.JudgeOptionResp": {
            "type": "object",
            "properties": {
                "name": {
                    "description": "返回所有使用了这张照片的人，大部分情况下只有一张",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "小明",
                        "小红",
                        "小黑"
                    ]
                },
                "right": {
                    "description": "是否正确，1为正确，2为不正确",
                    "type": "integer",
                    "example": 2
                }
            }
        },
        "model.Option": {
            "type": "object",
            "properties": {
                "id": {
                    "description": "学生ID",
                    "type": "integer"
                },
                "name": {
                    "description": "学生姓名",
                    "type": "string"
                }
            }
        },
        "model.Photo": {
            "type": "object",
            "properties": {
                "file": {
                    "description": "文件名",
                    "type": "string",
                    "example": "e744fd4e-313f-4977-9642-448927a283c1.jpg"
                },
                "size": {
                    "description": "照片大小",
                    "type": "integer",
                    "example": 1110524
                }
            }
        },
        "model.UpdateMeReq": {
            "type": "object",
            "required": [
                "depart",
                "photo",
                "show"
            ],
            "properties": {
                "depart": {
                    "description": "部门ID",
                    "type": "integer",
                    "example": 3
                },
                "photo": {
                    "description": "照片文件名",
                    "type": "string",
                    "example": "df93c5bb-b957-4e24-afa1-9cr2372ef8fe.jpg"
                },
                "show": {
                    "description": "是否显示照片，1为显示，2为不显示",
                    "type": "integer",
                    "example": 2
                }
            }
        }
    },
    "securityDefinitions": {
        "authorization": {
            "type": "apiKey",
            "name": "authorization",
            "in": "header"
        }
    },
    "tags": [
        {
            "description": "图片前缀为 [host]/upload/",
            "name": "photo"
        }
    ]
}